<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/white_block"
        android:layout_width="409dp"
        android:layout_height="890dp"
        android:scaleType="fitXY"
        android:src="@drawable/messag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="-1dp"
        app:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_container"
        android:layout_width="411dp"
        android:layout_height="890dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="-1dp"
        app:layout_editor_absoluteY="1dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messages_recycler"
            android:layout_width="324dp"
            android:layout_height="736dp"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent"
            app2:layout_constraintVertical_bias="0.165"
            app:layout_constraintTop_toBottomOf="@+id/group_name" />

        <ImageButton
            android:id="@+id/btn_files"
            android:layout_width="31dp"
            android:layout_height="36dp"
            android:background="@null"
            android:textColor="#000000"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.049"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/messages_recycler"
            app2:layout_constraintVertical_bias="0.582" />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="268dp"
            android:layout_height="39dp"
            android:textColor="#000000"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.496"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/messages_recycler"
            app2:layout_constraintVertical_bias="0.605" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="31dp"
            android:layout_height="37dp"
            android:background="@null"
            android:textColor="#000000"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintHorizontal_bias="0.942"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toBottomOf="@+id/messages_recycler"
            app2:layout_constraintVertical_bias="0.576" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="174dp"
            android:layout_height="23dp"
            android:text="Название группы"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app2:layout_constraintBottom_toBottomOf="parent"
            app2:layout_constraintEnd_toEndOf="parent"
            app2:layout_constraintStart_toStartOf="parent"
            app2:layout_constraintTop_toTopOf="parent"
            app2:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>