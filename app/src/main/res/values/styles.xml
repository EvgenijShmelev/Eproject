<resources>
    <!-- Стиль кнопок -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/mint</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Стиль полей ввода -->
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/mint</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Дополнительные стили -->
    <style name="GroupTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/rounded_bg_gray</item>
    </style>

    <style name="SearchResultText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/mint</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ChatButtonStyle">
        <item name="android:backgroundTint">@color/mint</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>