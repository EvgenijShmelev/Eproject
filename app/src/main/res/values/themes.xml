<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Base.Theme.Eproject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Цвет фона -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Стиль для диалогов -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>

        <!-- Отключение ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Оптимизации -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.Eproject" parent="Base.Theme.Eproject" />

    <!-- Дополнительные стили для диалогов -->
    <style name="Dialog.Theme.Eproject" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonStyle.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonStyle.Dialog</item>
    </style>

    <style name="ButtonStyle.Dialog" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>